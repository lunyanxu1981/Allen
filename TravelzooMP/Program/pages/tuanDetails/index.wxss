.banner {
  padding: 23rpx 30rpx;
  border-bottom: 20rpx solid #f1f1f1;
  position: relative;
  font-size: 25rpx;
}
.banner>view:nth-of-type(1) {
  width: 88rpx;
  height: 48rpx;
  background-color: #ffed20; 
  border: 1rpx solid #ffed20; 
  border-radius: 10rpx;
  font-weight: 800;
  line-height: 48rpx;
  text-align: center;
}
.banner>view:nth-of-type(2) {
  position: absolute;
  top: 23rpx;
  left: 130rpx;
  height: 50rpx;
