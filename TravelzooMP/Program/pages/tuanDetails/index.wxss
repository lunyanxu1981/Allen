  bottom: 0;
  left: 0;
  z-index: 2000;
  background: #fff;
}
.commodity_attr_box .headerlay{
  height: 80rpx;
  line-height: 80rpx;
  border-bottom: 2rpx solid #eee;
  padding-left:20rpx;
  font-size: 16px;
}
